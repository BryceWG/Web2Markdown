{
  "manifest_version": 2,
  "name": "Web2Markdown",
  "version": "1.0.0",
  "description": "Convert webpage content to markdown using LLM",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "clipboardWrite",
    "contextMenus",
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Convert to Markdown",
    "default_icon": {
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  
  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    "content.js"
  ]
}